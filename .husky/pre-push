#!/usr/bin/bash
# File:        /.husky/pre-push
# Description: Comprehensive quality gates before pushing to remote
# 2025-11-14   Created    Pre-push validation for Angular UI

. "$(dirname "$0")/_/husky.sh"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
NC='\033[0m' # No Color

echo -e "${PURPLE}ğŸš€ Pre-push quality gates${NC}"
echo -e "${BLUE}ğŸ” Running comprehensive validation...${NC}"

# Check current branch
PROTECTED_BRANCH="main"
CURRENT_BRANCH=$(git branch --show-current)

if [ "$CURRENT_BRANCH" = "$PROTECTED_BRANCH" ]; then
  echo -e "${YELLOW}âš ï¸  Pushing to protected branch '$PROTECTED_BRANCH'${NC}"
  echo -e "${YELLOW}ğŸ’¡ Extra validation will be performed${NC}"
fi

# 1. Full Lint Check
echo -e "${BLUE}ğŸ” Running comprehensive lint check...${NC}"
npm run lint:check

if [ $? -ne 0 ]; then
  echo -e "${RED}âŒ Linting failed. Please fix all issues before pushing.${NC}"
  exit 1
fi

echo -e "${GREEN}âœ… Lint check passed${NC}"

# 2. TypeScript Compilation Check
echo -e "${BLUE}ğŸ“ Verifying TypeScript compilation...${NC}"
npx tsc --noEmit

if [ $? -ne 0 ]; then
  echo -e "${RED}âŒ TypeScript compilation failed.${NC}"
  exit 1
fi

echo -e "${GREEN}âœ… TypeScript compilation successful${NC}"

# 3. Run Full Test Suite
echo -e "${BLUE}ğŸ§ª Running full test suite...${NC}"
npm run test:ci

if [ $? -ne 0 ]; then
  echo -e "${RED}âŒ Tests failed. Please fix failing tests before pushing.${NC}"
  exit 1
fi

echo -e "${GREEN}âœ… All tests passed${NC}"

# 4. Check Test Coverage
echo -e "${BLUE}ğŸ“Š Checking test coverage...${NC}"
npm run test:coverage 2>&1 | tee /tmp/coverage-output.txt

# Extract coverage percentage (simple check)
if grep -q "All files" /tmp/coverage-output.txt; then
  COVERAGE_LINE=$(grep "All files" /tmp/coverage-output.txt | tail -1)
  echo -e "${BLUE}ğŸ“ˆ Coverage: $COVERAGE_LINE${NC}"

  # Parse coverage percentage (this is a simple check)
  COVERAGE_PERCENT=$(echo "$COVERAGE_LINE" | awk '{print $2}' | sed 's/%//')

  if [ -n "$COVERAGE_PERCENT" ] && [ "$COVERAGE_PERCENT" -lt 80 ]; then
    echo -e "${YELLOW}âš ï¸  Test coverage is below 80% threshold${NC}"
    echo -e "${YELLOW}ğŸ’¡ Consider adding more tests before pushing${NC}"
    # Don't fail, just warn
  else
    echo -e "${GREEN}âœ… Test coverage meets requirements (â‰¥80%)${NC}"
  fi
else
  echo -e "${YELLOW}âš ï¸  Could not determine coverage percentage${NC}"
fi

# 5. Security Audit (non-blocking for dev dependencies)
echo -e "${BLUE}ğŸ”’ Running npm security audit...${NC}"
npm audit --production --audit-level=high

if [ $? -ne 0 ]; then
  echo -e "${YELLOW}âš ï¸  Security vulnerabilities detected in production dependencies${NC}"
  echo -e "${YELLOW}ğŸ’¡ Review and fix high-severity vulnerabilities${NC}"
  # Don't fail push, but strongly recommend fixing
fi

# 6. Build Verification (for main branch)
if [ "$CURRENT_BRANCH" = "$PROTECTED_BRANCH" ]; then
  echo -e "${BLUE}ğŸ—ï¸  Verifying production build (main branch)...${NC}"
  npm run build:prod

  if [ $? -ne 0 ]; then
    echo -e "${RED}âŒ Production build failed!${NC}"
    exit 1
  fi

  echo -e "${GREEN}âœ… Production build successful${NC}"
fi

# 7. Check for unresolved merge conflicts
echo -e "${BLUE}ğŸ” Checking for merge conflict markers...${NC}"
if git diff --check; then
  echo -e "${GREEN}âœ… No merge conflict markers found${NC}"
else
  echo -e "${RED}âŒ Merge conflict markers detected!${NC}"
  exit 1
fi

# Cleanup
rm -f /tmp/coverage-output.txt

echo -e "${GREEN}âœ… All pre-push checks passed!${NC}"
echo -e "${PURPLE}ğŸ‰ Ready to push to remote${NC}"
